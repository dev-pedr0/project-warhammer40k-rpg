    <body>
        <div class="container">
            <header class="titulos">
                <h1>
                    Warhammer 40K em Português
                </h1>
                <h2>
                    Criação de Personagens e Resumo de Regras
                </h2>
            </header>
            <% if (message) { %>
                <div class="<%= messageType %>">
                    <p><%= message %></p>
                </div>
            <% } %>
            <form method="POST" class="formulario" action="/process-action">
                <p>Usuário</p>
                <input type="text" name="username" required/>
    
                <p>Senha</p>
                <input type="password" name="password" required/>
                <input type="hidden" name="action" value="register" id="formAction"/>
                <div class="butoes">
                    <button type="submit" onclick="setAction('login')">
                        <a>
                            Login
                        </a>
                    </button>
                    <button type="submit" onclick="setAction('register')">
                        <a>
                            Cadastrar
                        </a>
                    </button>
                </div>
            </form>
            <footer class="rodape">
                <div>
                    <p>
                        © 2024 Pedro Costa
